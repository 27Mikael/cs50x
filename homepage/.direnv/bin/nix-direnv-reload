#!/usr/bin/env bash
set -e
if [[ ! -d "/run/media/harbinger/Projects/cs50x/homepage" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/run/media/harbinger/Projects/cs50x/homepage")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/run/media/harbinger/Projects/cs50x/homepage" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/run/media/harbinger/Projects/cs50x/homepage/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/run/media/harbinger/Projects/cs50x/homepage/.envrc" "/run/media/harbinger/Projects/cs50x/homepage/.direnv"/*.rc
